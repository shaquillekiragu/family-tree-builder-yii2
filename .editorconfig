# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = tab
indent_size = 4
max_line_length = 200

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = tab
indent_size = 4
max_line_length = 200

# CSS/SCSS files
[*.{css,scss,sass}]
indent_style = tab
indent_size = 4
max_line_length = 200

# HTML files
[*.{html,htm}]
indent_style = tab
indent_size = 4
max_line_length = 200

# JSON files
[*.json]
indent_style = tab
indent_size = 4
max_line_length = 200

# YAML files
[*.{yml,yaml}]
indent_style = tab
indent_size = 4
max_line_length = 200

# Markdown files
[*.md]
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = false

# Configuration files
[*.{ini,conf,config}]
indent_style = tab
indent_size = 4
max_line_length = 200
